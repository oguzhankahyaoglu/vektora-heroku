@{
    ViewData["Title"] = "Home Page";
    var banners = ServiceCaller.CallVenüsBayi(ws => ws.GetBannersAsync(ServiceCaller.AuthToken));
    var categories = ServiceCaller.CallVenüsBayi(ws => ws.GetCategoriesAsync(ServiceCaller.AuthToken));
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        @for (var i = 0; i < banners.Length; i++)
        {
            <li data-target="#myCarousel" data-slide-to="@i" class="@(i==0?"active":"")"></li>
        }
    </ol>
    <div class="carousel-inner" role="listbox">
        @for (var i = 0; i < banners.Length; i++)
        {
            var banner = banners[i];
            <div class="item @(i==0?"active":"")">
                <img src="@banner.VestelBannerImage" alt="ASP.NET" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>
                        @Html.Raw(banner.VestelBannerHTMLTitle)
                    </p>
                </div>
            </div>
        }
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
@foreach (var category in categories)
{
    <div class="row">
        <h1>@category.DisplayName</h1>
        @foreach (var category2 in category.SubCategories)
        {
            <div class="col-md-3">
                <h2>@category2.DisplayName</h2>
                @foreach (var category3 in category2.SubCategories)
                {
                    var products = ServiceCaller.CallVenüsBayi(ws => ws.GetProductsOfCategoryAsync(ServiceCaller.AuthToken, category3.CategoryID));
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">@category3.DisplayName</h3>
                        </div>
                        <div class="panel-body">
                        @foreach (var product in products)
                        {
                            <a href="@product.Url" target="_blank">@product.DisplayName</a><br/>
                        }
                        </div>
                    </div>
                }

            </div>
        }
    </div>
}
